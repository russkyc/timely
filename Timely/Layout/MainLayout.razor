@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout Class="flex w-screen h-screen">
    <MudAppBar Elevation="0">
        <MudText Typo="Typo.h5" Class="font-medium">Timely</MudText>
        <MudSpacer/>
        <MudButton DisableElevation="true" Color="Color.Primary" Class="rounded-lg" Href="https://github.com/russkyc" Variant="Variant.Filled">
            <MudStack Row="true" Spacing="2" Class="flex flex-row">
                <MudIcon Class="w-5" Icon="@Icons.Custom.Brands.GitHub"></MudIcon>
                <MudText Class="text-sm my-auto">created by russkyc</MudText>
            </MudStack>
        </MudButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>